<Page x:Class="Raminagrobis.WPF2.Pages.Panier.OptionFournisseurPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF2.Pages.Panier"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptionFournisseurPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="DownloadBtn" Click="DownloadBtn_Click">Telecharger le panier (.csv)</Button>
        <Button Grid.Row="2" x:Name="UploadBtn" Click="UploadBtn_Click">Importer les prix (.csv)</Button>
    </Grid>
</Page>
